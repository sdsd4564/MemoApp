<resources>

    <style name="DialogAnimation.Window." parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_left</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Window.</item>
    </style>

    <style name="Theme.MyTheme" parent="AppTheme">
        <item name="searchViewStyle">@style/MySearchView</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="searchViewStyle">@style/MySearchView</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#efefef</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionOverflowMenuStyle">@style/menuStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_arrow_left_white_36dp</item>
    </style>

    <style name="menuStyle" parent="AppTheme">
        <item name="popupTheme">@style/MyMenu</item>
    </style>

    <style name="MyMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>



</resources>
